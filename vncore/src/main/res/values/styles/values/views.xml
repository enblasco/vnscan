<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="icon_login">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/margin_small</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="checkbox_login" parent="VnCheckBox">
        <item name="android:text">@string/show_password</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginRight">@dimen/margin_large</item>
    </style>

    <style name="WidhtMatchHeightMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidhtWrapHeightMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WidhtMatchHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidhtWrapHeightWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WidthWeightHeightWrap">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
